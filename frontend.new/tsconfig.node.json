{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["../assets/*"]
    },
    "composite": true
  },
  "include": [
    "vite.config.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
